<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_color_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorPurple"
        android:text="purple color"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_color_teal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorTeal"
        android:text="teal color"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@+id/btn_color_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorWhite"
        android:text="white color"
        android:textColor="@color/black"
        app:backgroundTint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_color_purple" />


</androidx.constraintlayout.widget.ConstraintLayout>